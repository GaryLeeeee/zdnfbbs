<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zdnf.bbs.dao.UserApiDao">

    <select id="get_user_info" resultType="com.zdnf.bbs.domain.User">
        SELECT * FROM userinfo WHERE name=#{name}
    </select>

    <select id="get_user_replay">
        SELECT * FROM replay WHERE author=#{name} ORDER BY times DESC LIMIT #{low},#{max}
    </select>

    <select id="get_user_post">
        SELECT * FROM post WHERE author#{name} ORDER BY id DESC LIMIT #{low},#{max}
    </select>

</mapper>